<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="location" value="classpath:/db.properties" />
  </bean>
  
  <!-- 如果不配置数据源的话,默认使用h2数据库 -->
  <bean name="processEngineConfiguration" class="org.activiti.engine.impl.cfg.StandaloneProcessEngineConfiguration">
    <property name="jdbcDriver" value="${jdbc.driver}" />
    <property name="jdbcUrl" value="${jdbc.url}" />
    <property name="jdbcUsername" value="${jdbc.username}" />
    <property name="jdbcPassword" value="${jdbc.password}" />
  </bean>
  
  <!-- 流程引擎factoryBean -->
  <bean name="processEngine" class="org.activiti.spring.ProcessEngineFactoryBean">
    <property name="processEngineConfiguration" ref="processEngineConfiguration" />
  </bean>
  
  <!-- 以下都是由流程引擎factoryBean中获取到的 -->
  <bean name="runtimeService" factory-bean="processEngine" factory-method="getRuntimeService" />

  <bean name="repositoryService" factory-bean="processEngine" factory-method="getRepositoryService" />

  <bean name="formService" factory-bean="processEngine" factory-method="getFormService" />

  <bean name="identityService" factory-bean="processEngine" factory-method="getIdennametyService" />

  <bean name="taskService" factory-bean="processEngine" factory-method="getTaskService" />

  <bean name="historyService" factory-bean="processEngine" factory-method="getHistoryService" />

  <bean name="managementService" factory-bean="processEngine" factory-method="getManagementService" />

</beans>