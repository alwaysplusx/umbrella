<?xml version="1.0" encoding="utf-8"?>
<configuration packages="com.harmony.umbrella.log4j2">
  <properties>
    <property name="pattern">
      [%p{length=4}] [%d{MM/dd HH:mm:ss,SSS}] %c{1}.%M(%F:%L) - %m%n
    </property>
  </properties>
  <appenders>

    <console name="console" target="system_out">
      <patternlayout pattern="${pattern}" />
    </console>

    <jdbc-umbrella name="operator">
      <columns>
        <column source="a" target="b" />
      </columns>
    </jdbc-umbrella>

  </appenders>
  <loggers>
    <root level="info">
      <appenderRef ref="console" />
      <appenderRef ref="operator" />
    </root>
  </loggers>
</configuration>